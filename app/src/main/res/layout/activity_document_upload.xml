<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_padding_default"
    tools:context=".ui.activity.license.uploadDocument.DocumentUploadActivity">

    <ImageView
        android:id="@+id/adu_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:id="@+id/adu_btn_camera"
        style="@style/ButtonOutline.Normal"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/margin_padding_default"
        android:layout_marginRight="10dp"
        android:text="Kamera"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/adu_btn_gallery"
        app:layout_constraintTop_toBottomOf="@id/adu_iv" />

    <Button
        android:id="@+id/adu_btn_gallery"
        style="@style/ButtonOutline.Normal"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/margin_padding_default"
        android:text="Galeri"
        android:textColor="@color/darken_tosca"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/adu_btn_camera"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adu_iv"
        app:strokeColor="@color/darken_tosca" />

    <Button
        android:id="@+id/adu_btn_upload"
        style="@style/ButtonDefault.Big"
        android:layout_width="0dp"
        android:text="Upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>