<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/if_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_padding_default"
    android:layout_marginVertical="5dp"
    android:background="@drawable/bg_selected_patient"
    android:padding="@dimen/margin_padding_default">

    <TextView
        android:id="@+id/if_tv_name"
        style="@style/style_text_menu_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/brand2"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Balai Kesehatan Indera Masyarakat" />

    <TextView
        android:id="@+id/if_tv_address"
        style="@style/style_text_caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/ghost_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/if_tv_name"
        tools:text="Alamat faskesnya nanti ada disisni" />

</androidx.constraintlayout.widget.ConstraintLayout>