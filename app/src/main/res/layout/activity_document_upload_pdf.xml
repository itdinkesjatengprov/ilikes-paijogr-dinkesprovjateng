<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.license.uploadDocument.DocumentUploadPdfActivity">

    <com.pdfview.PDFView
        android:id="@+id/adup_pdfview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_padding_default"
        app:layout_constraintBottom_toTopOf="@id/adup_btn_select_file"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/adup_btn_select_file"
        style="@style/ButtonLink.Normal"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/margin_padding_default"
        android:text="Pilih File"
        app:layout_constraintBottom_toTopOf="@id/adup_btn_upload"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/adup_tv_filename"
        style="@style/style_text_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_padding_default"
        app:layout_constraintBottom_toBottomOf="@id/adup_btn_select_file"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/adup_btn_select_file"
        app:layout_constraintTop_toTopOf="@id/adup_btn_select_file" />

    <Button
        android:id="@+id/adup_btn_upload"
        style="@style/ButtonDefault.Big"
        android:layout_width="0dp"
        android:layout_margin="@dimen/margin_padding_default"
        android:text="Upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>