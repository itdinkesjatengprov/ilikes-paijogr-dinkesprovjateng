<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="margin_padding_default">15dp</dimen>
    <dimen name="margin_padding_20">20dp</dimen>

    <dimen name="text_page_titles">18sp</dimen>
    <dimen name="text_important">16sp</dimen>
    <dimen name="text_menu_titles">14sp</dimen>
    <dimen name="text_body">14sp</dimen>
    <dimen name="text_captions">13sp</dimen>
    <dimen name="text_label">13sp</dimen>
    <dimen name="text_input">14sp</dimen>
    <dimen name="text_error">12sp</dimen>
    <dimen name="text_button">14sp</dimen>
    <dimen name="text_10">10sp</dimen>

    <style name="style_text_page_title">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">@dimen/text_page_titles</item>
    </style>

    <style name="style_text_important">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_important</item>
    </style>

    <style name="style_text_menu_title">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">@dimen/text_menu_titles</item>
    </style>

    <style name="style_text_body">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="style_text_caption">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_captions</item>
    </style>

    <style name="style_text_label">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/text_label</item>
    </style>

    <style name="style_text_inputs">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_input</item>
    </style>

    <style name="style_text_error">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_error</item>
        <item name="android:textColor">@color/basic_red</item>
    </style>

    <style name="style_text_button_allcaps">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="style_text_button">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>